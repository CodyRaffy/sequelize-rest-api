{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*"
  ]
}